<Window x:Class="ByCrypt.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ByCrypt"
        mc:Ignorable="d"
        Title="LoginPage" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock>Gebruikersnaam</TextBlock>
            <TextBox x:Name="LoginUsername"></TextBox>
            <TextBlock  Margin="0,10,0,0">Wachtwoord</TextBlock>
            <TextBox x:Name="LoginPassword"></TextBox>
            <Button x:Name="btnLogin" Height="25" Margin="0,10,0,0" Click="btnLogin_Click">Inloggen</Button>
        </StackPanel>
    </Grid>
</Window>
