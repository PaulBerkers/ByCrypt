<Window x:Class="ByCrypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ByCrypt"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock>Gebruikersnaam</TextBlock>
            <TextBox x:Name="Username"></TextBox>
            <TextBlock  Margin="0,10,0,0">Wachtwoord</TextBlock>
            <TextBox x:Name="Password"></TextBox>
            <Button x:Name="btnToevoegen" Margin="0,10,0,0" Height="20" Content="Toevoegen" Click="btnToevoegen_Click"></Button>
            <Button Height="20" Margin="0,10,0,0" Click="Button_Click">Inloggen</Button>
        </StackPanel>
    </Grid>
</Window>
